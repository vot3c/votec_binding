<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="votec"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
  xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0
                      http://eclipse.org/smarthome/schemas/thing-description/v1.0.0">

  
  
  <thing-type id="votec_output_10" listed="false">
    <label>votec_output_module_10</label>
    <description>
      <![CDATA[
      Votec Output Module<br /><p>This Product can controller up to 10 device.</p>
      ]]>
    </description>
    <category>Output Module</category>

    <config-description>
		<parameter name="blindNumber" type="integer" required="true" min="0" max="5">
		     <label>Panjur Sayısı</label>
		     <description>Kullanılacak panjur sayısını giriniz.(Max:5)</description>
		     <default>0</default>
		</parameter>
		<parameter name="testMode" type="boolean">
             <label>Test Mod</label>
             <description>Cihaz test modunu aktifleştirir.</description>
             <advanced>false</advanced>
             <default>false</default>
       </parameter>
		
    </config-description>

  </thing-type>


  <thing-type id="votec_input_35" listed="true">
    <label>votec_input_module_35</label>
    <description>
      <![CDATA[
      Votec Input Module<br /><p>This Product can controller up to 35 device.</p>
      ]]>
    </description>
    
     <channels>
            <channel id="input35" typeId="input" />           
    </channels>
    
  </thing-type>

<thing-type id="votec_input_20" listed="true">
    <label>votec_input_module_20</label>
    <description>
      <![CDATA[
      Votec Input Module<br /><p>This Product can controller up to 20 device.</p>
      ]]>
    </description>
    
    <channels>
            <channel id="input20" typeId="input" />           
    </channels>
</thing-type>

    <!-- Sample Channel Type -->
    <channel-type id="input">
        <item-type>Number</item-type>
        <label>Input</label>
        <description>Input Ports</description>
    </channel-type>
    
    <channel-type id="relay">
        <item-type>Switch</item-type>
        <label>Button Event</label>
    </channel-type>
    
    <channel-type id="blind">
        <item-type>Rollershutter</item-type>
        <label>Blind 1</label>
    </channel-type>

</thing:thing-descriptions>
