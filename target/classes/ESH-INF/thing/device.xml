      <![CDATA[
      Votec Output Module<br /><p>This Product can controller up to 10 device.</p>
      ]]>
    </description>
    <category>Output Module</category>
    
    

    <config-description>
		<parameter name="blindNumber" type="integer" required="true" min="0" max="5">
		     <label>Panjur Sayısı</label>
		     <description>Kullanılacak panjur sayısını giriniz.(Max:5)</description>
		     <default>0</default>
		</parameter>
		<parameter name="testMode" type="boolean">
             <label>Test Mod</label>
             <description>Cihaz test modunu aktifleştirir.</description>
             <advanced>true</advanced>
             <default>false</default>
       </parameter>
		
    </config-description>
     
    
    
  </thing-type>
  
  
